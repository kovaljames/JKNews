@model User
@{
    ViewData["Title"] = "User delete";
}

<h1 class="text-primary">@ViewData["Title"]</h1>
<hr />
<h4>Deseja realmente excluir o usuário <b class="text-danger">@Model.UserName</b>?</h4>

<form asp-action="DeleteUser" class="w-25">
    <input asp-action="hidden" asp-for="@Model.Id" />
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-success">No</a>
        <button class="btn btn-danger" type="submit">Yes</button>
    </div>
</form>